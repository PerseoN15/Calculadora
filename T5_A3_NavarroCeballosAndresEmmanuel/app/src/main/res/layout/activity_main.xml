        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="Punto"
        android:text="@string/btn_punto"
        android:textSize="50sp"

        android:textAlignment="center"
        android:background="#C6C4C4"
        app:layout_constraintStart_toEndOf="@+id/btn_raiz"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_fraccion"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:onClick="potNeg"
        android:text="@string/btn_fraccion"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_cuadrado"
        app:layout_constraintTop_toBottomOf="@+id/caja_Resultados" />

    <Button
        android:id="@+id/btn_20"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFFC33"
        android:onClick="divi"
