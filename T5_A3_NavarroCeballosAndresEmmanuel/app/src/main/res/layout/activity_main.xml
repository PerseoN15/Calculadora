<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/caja_Resultados"
        android:layout_width="346dp"
        android:layout_height="73dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:background="#C6C4C4"
        android:editable="false"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="@string/txt_resultado"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_porcentaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_porcentaje"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:onClick="porcen"
        android:text="%"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caja_Resultados" />

    <Button
        android:id="@+id/btn_CE"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"

        android:background="#FF334C "
        android:onClick="CE"
        android:text="@string/btn_CE"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_porcentaje" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="Num7"
        android:background="#C6C4C4"
        android:textAlignment="center"
        android:text="@string/btn_Num7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_CE" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="Num1"
        android:text="@string/btn_Num1"
        android:background="#C6C4C4"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_simbolo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="Simbolo"
        android:text="@string/btn_simbolo"
        android:textSize="24sp"
        android:background="#D36E10"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="Num4"
        android:text="@string/btn_Num4"
        android:background="#C6C4C4"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_raiz"
        android:layout_width="80dp"
        android:textAlignment="center"

        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:onClick="sqrt"
        android:text="@string/btn_raiz"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/caja_Resultados" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="Num5"
        android:text="@string/btn_Num5"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="#C6C4C4"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/btn_8" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="Num2"
        android:background="#C6C4C4"
        android:text="@string/btn_Num2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:onClick="Num0"
        android:text="@string/btn_Num0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:background="#C6C4C4"
        android:onClick="Num8"
        android:text="@string/btn_Num8"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentaje"
        app:layout_constraintTop_toBottomOf="@+id/btn_CE" />

    <Button
        android:id="@+id/btn_cuadrado"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:onClick="pot2"
        android:text="@string/btn_cuadrado"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_raiz"
        app:layout_constraintTop_toBottomOf="@+id/caja_Resultados" />

    <Button
        android:id="@+id/btn_15"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#C6C4C4"
        android:textAlignment="center"
        android:onClick="Borrar"
        android:text="@string/btn_borrar"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn_raiz"
        app:layout_constraintTop_toBottomOf="@+id/btn_cuadrado" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="80dp"
        android:textAlignment="center"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
